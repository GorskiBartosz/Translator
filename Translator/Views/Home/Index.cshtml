@{
    ViewBag.Title = "Home Page";
}
<h1>@ViewBag.Message</h1>


<div class="row">
    
    <div class="col-md-12">
        <div id="main-alert"class="alert alert-dismissible alert-danger">
            <button type="button" class="close" id="close-main-alert">&times;</button>
            <strong>Sorry!</strong>  We have got some problems with server connection, please try again later.
            (Remember that we have <strong>limited number of requests - 5 per hour</strong> )
        </div>
    </div>
    <div class="col-md-6">
        <h3>Your text</h3>
        <textarea class="form-control" id="source"></textarea>
    </div>

    <div class="col-md-6">
        <h3>Translated text</h3> 
        <textarea readonly class="form-control" id="translation"></textarea>
    </div>

    <div class="col-md-12">
        <a id="translateButton" href="#" class="btn btn-primary">Translate</a>
    </div>


</div>
@section scripts {
    @Scripts.Render("~/bundles/main-scripts")
}
